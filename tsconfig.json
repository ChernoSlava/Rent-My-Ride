{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "./build",
    // "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true, //  для ts imports
  },
  "include": [
    "src/**/*.jsx",
    "src/**/*.ts",
    "src/**/*.tsx", 
    "src/App.tsx", 
    "src/index.ts"  ],
  "exclude": [
    "node_modules",
    "./build/**/*"
  ]
}